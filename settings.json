{
  "editor.minimap.enabled": false,
  "editor.rulers": [80],
  "editor.renderLineHighlight": "none",
  "editor.renderIndentGuides": false,
  "editor.suggestSelection": "first",
  "editor.occurrencesHighlight": false,
  "editor.selectionHighlight": false,
  "editor.cursorBlinking": "solid",
  "editor.formatOnSave": true,

  "workbench.activityBar.visible": true,
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "vim.leader": ",",
  // "vim.searchHighlightColor": "yellow",
  "vim.visualstar": true,
  "vim.hlsearch": true,
  "vim.foldfix": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "g", "o", "t"],
      "commands": ["go.test.file"]
    },
    {
      "before": ["<leader>", "f", "i"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "h"],
      "commands": [":nohl"]
    },
    {
      "before": ["<leader>", "c", "l"],
      "commands": ["codelens.showLensesInCurrentLine"]
    }
  ],
  "vim.handleKeys": {
    "<C-w>": false,
    "<C-f>": false,
    "<C-t>": false
  },
  "vim.useSystemClipboard": true,
  "editor.fontFamily": "Jetbrains Mono",
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "task.slowProviderWarning": ["npm"],
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "debug.console.fontFamily": "Hack",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "rust-analyzer.runnableEnv": {
    "RUST_BACKTRACE": 0
  },
  "reason.codelens.enabled": true,
  "window.nativeFullScreen": false,
  "clock.dateFormat": "HH:MM",
  "explorer.confirmDelete": false,
  "go.useLanguageServer": true,
  "go.autocompleteUnimportedPackages": true,
  "go.formatTool": "goimports",
  "go.lintTool": "golint",
  "go.delveConfig": {
    "dlvLoadConfig": {
      "maxStringLen": 2048
    },
    "apiVersion": 2
  },
  "go.testEnvVars": {
    "PGPORT": "5432",
    "PGHOST": "localhost",
    "PGUSER": "sourcegraph",
    "PGPASSWORD": "sourcegraph",
    "PGDATABASE": "sourcegraph",
    "PGSSLMODE": "disable"
  },
  "terminal.integrated.fontFamily": "JetBrains Mono",
  "terminal.integrated.fontWeightBold": "bold",
  "bracketPairColorizer.showHorizontalScopeLine": false,
  "bracketPairColorizer.showVerticalScopeLine": false,
  "projectManager.git.baseFolders": [
    "~/code/clones",
    "~/work",
    "~/code/projects"
  ],
  "files.watcherExclude": {
    "**/.bloop": true,
    "**/.metals": true,
    "**/.ammonite": true
  },
  "metals.javaHome": "/Users/thorstenball/.jabba/jdk/adopt@1.11.0-9/Contents/Home",
  "window.restoreWindows": "none",
  "breadcrumbs.enabled": true,
  "editor.fontSize": 13,
  "go.toolsManagement.autoUpdate": true,
  "workbench.colorTheme": "Gruvbox Dark (Hard)",
}
