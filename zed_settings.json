{
  "show_copilot_suggestions": false,
  "show_completion_documentation": true,
  "assistant": {
    "dock": "right"
  },
  "project_panel": {
    "dock": "left"
  },
  "soft_wrap": "none",
  "vim_mode": true,
  "cursor_blink": false,
  "scrollbar": {
    "show": "never"
  },
  "base_keymap": "VSCode",
  "theme": "Gruvbox Dark Hard",
  "ui_font_size": 14,
  "ui_font_family": "BerkeleyMono Nerd Font Mono",
  "buffer_font_size": 13,
  "buffer_font_family": "BerkeleyMono Nerd Font Mono",
  "buffer_line_height": {
    "custom": 1.25
  },
  "terminal": {
    "dock": "bottom",
    "blinking": "off",
    "font_size": 13,
    "font_family": "BerkeleyMono Nerd Font Mono",
    "line_height": {
      "custom": 1.25
    },
    "env": {
      // "SHELL": "/opt/homebrew/bin/bash",
      "GIT_EDITOR": "zed --wait"
    }
  },
  "inlay_hints": {
    "enabled": false
  }
}
