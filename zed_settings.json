{
  "relative_line_numbers": false,
  "always_treat_brackets_as_autoclosed": false,
  "show_copilot_suggestions": false,
  "features": {
    "copilot": false
  },
  "languages": {
    "SQL": {
      "formatter": "prettier"
    },
    "Markdown": {
      "show_copilot_suggestions": false
    },
    "Plain Text": {
      "show_copilot_suggestions": false
    },
    "TSX": {
      "code_actions_on_format": {
        // "source.organizeImports": true
        "source.fixAll.eslint": true
      }
    },
    "JavaScript": {
      // "formatter": "language_server",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "Ruby": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "bundle",
          "arguments": [
            "exec",
            "rubocop",
            "--fail-level",
            "error",
            "--autocorrect",
            "--stdin",
            "corrected.rb",
            "--stderr"
          ]
        }
      }
    }
  },
  "project_panel": {
    "dock": "left"
  },
  "soft_wrap": "editor_width",
  "vim_mode": true,
  "cursor_blink": false,
  "scrollbar": {
    "show": "never"
  },
  "base_keymap": "VSCode",
  "theme": "Gruvbox Dark Hard",
  "ui_font_size": 13,
  "ui_font_family": "BerkeleyMono Nerd Font Mono",
  "buffer_font_size": 12,
  "buffer_font_family": "BerkeleyMono Nerd Font Mono",
  // "buffer_font_size": 16,
  // "buffer_font_family": "PragmataPro Liga",
  "buffer_line_height": {
    "custom": 1.25
  },
  "terminal": {
    "dock": "right",
    "blinking": "on",
    "font_size": 12,
    "font_family": "BerkeleyMono Nerd Font Mono",
    "line_height": {
      "custom": 1.25
    },
    "env": {
      "GIT_EDITOR": "zed --wait"
    }
  },
  "inlay_hints": {
    "enabled": true
  },
  "lsp": {
    "eslint": {
      // "settings": {
      // "workingDirectories": ["./"],
      // "codeActionOnSave": {
      // "rules": ["import/order"]
      // }
      // }
    },
    "rust-analyzer": {
      // "binary": {
      //   "path": "/Users/thorstenball/tmp/rust-analyzer-aarch64-apple-darwin",
      //   "arguments": ["--no-log-buffering"]
      // },
      // "initialization_options": {
      //   "checkOnSave": false,
      //   "check": {
      //     "allTargets": false,
      //     "overrideCommand": ["cargo", "build", "--message-format=json"]
      //   }
      // }
    },
    "gopls": {
      "binary": {
        "path": "/Users/thorstenball/tmp/gopls",
        "arguments": ["-debug=0.0.0.0:9090"]
      },
      "initialization_options": {
        "usePlaceholders": true,
        "hints": {
          "assignVariableTypes": true,
          "compositeLiteralFields": true,
          "compositeLiteralTypes": true,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true,
          "rangeVariableTypes": true
        }
      }
    },
    "solargraph": {
      "initialization_options": {
        "diagnostics": true,
        "formatting": false
      }
    }
  }
}
